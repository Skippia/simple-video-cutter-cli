{
  "name": "simple-video-cutter-cli",
  "type": "commonjs",
  "version": "1.0.0",
  "description": "Cut part from video and compress it with preset using FFmpeg library.",
  "author": "Skippia",
  "license": "ISC",
  "homepage": "https://github.com/Skippia/simple-video-cutter-cli#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/Skippia/simple-video-cutter-cli.git"
  },
  "keywords": [
    "ffmpeg",
    "fluent-ffmpeg",
    "video-cutter",
    "video-compression",
    "cutter",
    "compression",
    "node",
    "typescript"
  ],
  "main": "./dist/main.cjs",
  "scripts": {
    "dev": "pnpm exec tsx --env-file=.env ./src/main.ts",
    "start": "node --env-file=.env ./dist/main.cjs",
    "prebuild": "pnpm exec rimraf --glob ./dist",
    "build": "pnpm exec vite build",
    "build:bin": "bun build src/main.ts --compile --minify --sourcemap --outfile dist/cutter",
    "eslint": "pnpm exec eslint .",
    "eslint:fix": "pnpm exec eslint . --fix"
  },
  "dependencies": {
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.3"
  },
  "pnpm": {
    "onlyBuiltDependencies": ["esbuild", "ffmpeg-static"]
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.1.1",
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/node": "^22.13.0",
    "eslint": "^9.19.0",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.2",
    "vite": "^6.0.11"
  }
}
